<% include ../partial/header %>
<div class="ui mamin container segment">
    <h1 class="ui header">Edit <%= book.title %></h1>
    <form class="ui form" action="/books/<%= book._id%>/?_method=PUT" method="POST">
        <div class="field">
            <label>Book Name</label>
            <input type="text" name="book[title]" value="<%= book.title %>">
        </div>
        <div class="field">
            <label>Author</label>
            <input type="text" name="book[author]" value="<%= book.author %>">
        </div>
        <div class="field">
            <label>ImageUrl</label>
            <input type="text" name="book[image]" value="<%= book.image %>">


        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="book[body]" value="<%= book.body %>"></textarea>
        </div>
        

        <button class="ui button" type="submit">Submit</button>
    </form>
</div>

<% include ../partial/footer %>